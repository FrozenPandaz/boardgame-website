      "@boardgame-website/theme": ["libs/theme/src/index.ts"],
      "@boardgame-website/boardgame/data-access": [
        "libs/boardgame/data-access/src/index.ts"
      ],
      "@boardgame-website/boardgame/contract": [
        "libs/boardgame/contract/src/index.ts"
      ],
      "@boardgame-website/fetch-xml": ["libs/fetch-xml/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
